@using Domain.Entities
<div class="w-40 p-4 bg-gray-800 rounded-lg shadow-md items-center">
    <h3 class="text-lg font-semibold">@Album.Name</h3>
    <p class="text-gray-400">@Album.Artist</p>
    <img class="rounded" src="@Album.ImageUrl"/>
</div>

@code {
    [Parameter] public Album Album { get; set; } = new Album();
}